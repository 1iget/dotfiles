# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"

# Pretty print the path
alias path="echo $PATH | tr -s ':' '\n'"

# Navigation
alias cdproj="cd ~/projects"
alias cdwork="cd ~/workplace"
alias cdchfe="cd ~/workplace/ThrillerCheckoutWebApp/src/ThrillerCheckoutPageAssets"
alias cdchbe="cd ~/workplace/ThrillerCheckoutWebApp/src/ThrillerCheckoutPageWebApp"
alias cdwiki="cd ~/Dropbox/vimwiki"
alias remote="ssh willcolb.aka.corp.amazon.com"

alias reloadsync="launchctl unload ~/Library/LaunchAgents/local.unison-file-sync.plist && launchctl load ~/Library/LaunchAgents/local.unison-file-sync.plist"

# Go to the root of a project (git root)
alias root='cd $(git rev-parse --show-cdup)'

# kill a rogue process running on a specific port
# usage: `killp 3000`
killp() { lsof -n "-i4TCP:${1:-3002}" | grep LISTEN | tr -s ' ' | cut -f 2 -d ' ' | xargs kill -9}

# Start a browsersync server watching the current directory
bsync() { browser-sync start --files "./**" --server; }
# Start a browsersync server and proxy 3000 (or pass a different number to proxy something else, IE: bsyncp 8000 for localhost:8000)
bsyncp() { browser-sync start --files "./**" --proxy "localhost:${1:-3000}" --no-open; }

chbsync() { browser-sync start --files "/Users/willcolb/workplace/ThrillerCheckoutWebApp/**/build/**" --proxy "https://willcolb.aka.corp.amazon.com:${1:-8553/tickets/purchase/123}" }


